<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppThemeLightMode" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wtmGreenLight</item>
        <item name="colorPrimaryDark">@color/wtmGreenDark</item>
        <item name="colorAccent">@color/wtmBlueLight</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="primaryTextColor">@color/black_87</item>
        <item name="secondaryTextColor">@color/black_54</item>
        <item name="backgroundCardColor">@color/white</item>
        <item name="navigationViewSelectedColor">@color/wtmGreenDark</item>
    </style>

    <style name="AppThemeNightMode" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/black_54</item>
        <item name="colorPrimaryDark">@color/black_87</item>
        <item name="colorAccent">@color/wtmBlueLight</item>
        <item name="primaryTextColor">@color/white</item>
        <item name="secondaryTextColor">@color/wtmBlueLight</item>
        <item name="backgroundCardColor">@color/black_54</item>
        <item name="navigationViewSelectedColor">@color/wtmGreenDark</item>
    </style>

    <style name="AppThemeLightMode.Launcher">
        <item name="android:background">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="WtmBerlin"/>

    <style name="WtmBerlin.Events"/>

    <style name="WtmBerlin.Events.ListHeader">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/material_space</item>
        <item name="android:paddingEnd">@dimen/material_space</item>
        <item name="android:textAppearance">@style/WtmBerlin.TextAppearance.ListHeader</item>
        <item name="android:minHeight">@dimen/material_single_line_list_height</item>
    </style>

    <style name="WtmBerlin.Events.ThreeLineListItem">
        <item name="android:background">?attr/backgroundCardColor</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/material_space</item>
        <item name="android:minHeight">@dimen/material_three_line_list_height</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WtmBerlin.Events.Name">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/WtmBerlin.TextAppearance.EventName</item>
    </style>

    <style name="WtmBerlin.Events.Header">
        <item name="android:padding">@dimen/material_space_half</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/WtmBerlin.TextAppearance.EventName</item>
    </style>

    <style name="WtmBerlin.Events.DateVenue">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/material_space_half</item>
        <item name="android:textAppearance">@style/WtmBerlin.TextAppearance.ListPrimary</item>
    </style>

    <style name="WtmBerlin.Events.Date" parent="WtmBerlin.Events.DateVenue">
        <item name="android:drawableStart">@drawable/events_icon_date</item>
    </style>

    <style name="WtmBerlin.Events.Venue" parent="WtmBerlin.Events.DateVenue">
        <item name="android:drawableStart">@drawable/events_icon_venue</item>
    </style>

    <style name="WtmBerlin.Events.Description">
        <item name="android:textAppearance">@style/WtmBerlin.TextAppearance.ListPrimary</item>
    </style>

    <style name="WtmBerlin.SocialMedia"/>

    <style name="WtmBerlin.SocialMedia.Item">
        <item name="android:textSize">@dimen/readable_text_size</item>
        <item name="android:paddingStart">@dimen/material_space</item>
        <item name="android:paddingEnd">@dimen/material_space</item>
        <item name="android:minHeight">@dimen/material_single_line_with_icon_list_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/material_space_double</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>
    <style name="WtmBerlin.SocialMedia.Content">
        <item name="android:textSize">@dimen/readable_text_size</item>
        <item name="android:paddingStart">@dimen/material_space</item>
        <item name="android:paddingEnd">@dimen/material_space</item>
        <item name="android:minHeight">@dimen/material_single_line_with_icon_list_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/material_space_double</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="WtmBerlin.SocialMedia.Link">
        <item name="android:textSize">@dimen/readable_text_size</item>
        <item name="android:paddingStart">@dimen/material_space</item>
        <item name="android:paddingEnd">@dimen/material_space</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">@dimen/material_single_line_with_icon_list_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/material_space_double</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="WtmBerlin.TextAppearance"/>

    <style name="WtmBerlin.TextAppearance.ListHeader">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/secondaryTextColor</item>
    </style>

    <style name="WtmBerlin.TextAppearance.EventName">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="WtmBerlin.TextAppearance.ListPrimary">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="WtmBerlin.TextAppearance.NoUpcoming">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/secondaryTextColor</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/wtmGreenLight</item>
        <item name="colorPrimaryDark">@color/wtmGreenDark</item>
        <item name="colorAccent">@color/wtmBlueLight</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="WtmBerlin.NavigationDrawer" parent="Widget.Design.NavigationView">
        <item name="itemTextColor">@drawable/nav_view_item_selected_color</item>
    </style>

</resources>
