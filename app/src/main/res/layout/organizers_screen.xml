<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <TextView
                android:gravity="center"
                android:id="@+id/kids_screen_info_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/wtm_mini"
                style="@style/WtmBerlin.Events.Header"
                android:text="WTM organizers"/>
    </com.google.android.material.card.MaterialCardView>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/material_space_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:padding="@dimen/material_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wtm_natalie"
                        android:text="We are all unpaid volunteers passionate about supporting the community. Please respect our time! After reaching out and setting up a collaboration, we will be usually requesting an info about the company and short speaker's biographies for the website - see one of the events to get a better idea. It would be great if you could provide them ahead!"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/material_space_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wtm_roxy"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/material_space_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wtm_natalie"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/material_space_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wtm_corina"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/material_space_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wtm_amanda"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/material_space_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wtm_anna"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
