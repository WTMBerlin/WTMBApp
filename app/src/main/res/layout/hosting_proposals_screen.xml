<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/contributions_header"
                style="@style/WtmBerlin.Events.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/wtm_mini"
                android:gravity="center"
                android:text="Event Venues" />
    </androidx.cardview.widget.CardView>


    <androidx.core.widget.NestedScrollView
            android:paddingBottom="@dimen/material_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_marginBottom="@dimen/material_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/material_space">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                    <TextView
                            style="@style/WtmBerlin.SocialMedia.Content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/material_space_half"
                            android:text="Would you like to host one of our meetups? Submit details via:"
                            android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/material_space">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/material_space"
                        android:gravity="center"
                        android:orientation="vertical">


                    <TextView
                            android:id="@+id/kids_screen_toy_info"
                            style="@style/WtmBerlin.Events.Description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:autoLink="web"
                            android:drawableBottom="@drawable/wtm_mini"
                            android:importantForAccessibility="yes"
                            android:text="@string/collaborations_call_for_action2" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

