<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kids_screen_info_header"
            style="@style/WtmBerlin.Events.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/wtm_mini"
            android:gravity="center"
            android:text="Occasional kids friendly events" />
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/material_space_quarter"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/material_space_half">

                        <TextView
                            android:id="@+id/kids_screen_info_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/material_space"
                            android:drawableEnd="@drawable/ic_favorite_border_black_24dp"
                            android:text="We hosted kids friendly events in the past and hope to do so in the future. If you could host a child friendly event, please reach out via one of our social media channels"
                            android:textColor="@color/divider"
                            android:textSize="18dp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/material_space_quarter">

                        <TextView
                            android:id="@+id/kids_screen_toy"
                            android:layout_width="@dimen/material_three_line_list_height"
                            android:layout_height="@dimen/material_three_line_list_height"
                            android:layout_gravity="bottom"
                            android:background="@drawable/ic_rotate"
                            android:backgroundTint="@color/secondaryVariant"
                            android:importantForAccessibility="no"
                            android:onClick="rotate" />
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/material_space"
                        android:layout_marginStart="@dimen/material_space"
                        android:layout_gravity="start">

                        <TextView
                            android:id="@+id/kids_screen_toy3"
                            android:layout_width="@dimen/material_three_line_list_height"
                            android:layout_height="@dimen/material_three_line_list_height"
                            android:layout_gravity="bottom"
                            android:background="@drawable/ic_rotate"
                            android:backgroundTint="@color/secondaryVariant"
                            android:importantForAccessibility="no"
                            android:onClick="rotate" />
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/material_space"
                        android:layout_marginEnd="@dimen/material_space"
                        android:layout_gravity="end">

                        <TextView
                            android:id="@+id/kids_screen_toy2"
                            android:layout_width="@dimen/material_three_line_list_height"
                            android:layout_height="@dimen/material_three_line_list_height"
                            android:layout_gravity="bottom"
                            android:background="@drawable/ic_rotate"
                            android:backgroundTint="@color/secondaryVariant"
                            android:importantForAccessibility="no"
                            android:onClick="rotate" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/material_space_half">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/kids_screen_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/material_space"
                                android:text="The kids-friendly events will always be explicitly marked in the event description. \n\nClick below to see our last kids-friendly event, International Women's Day Celebration at Wooga. We provided childcare, food and a separate parents room. "
                                android:textColor="@color/divider"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/link_facebook"
                                style="@style/WtmBerlin.SocialMedia.Link"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/material_space_half"
                                android:autoLink="web"
                                android:contentDescription="@null"
                                android:drawableStart="@drawable/social_media_icon_facebook"
                                android:importantForAccessibility="no"
                                android:text="https://www.facebook.com/WomenTechmakersBerlinPage/videos/563501104173571/?t=91" />


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </ScrollView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/material_space"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/material_space"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/WtmBerlin.Events.Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The icon above is a simple toy for children with or without visual impairments. To learn more open Accessibility screen from the menu." />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
