<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        <TextView
                android:id="@+id/kids_screen_info_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/material_space"
                style="@style/WtmBerlin.Events.Name"
                android:text="Occasional kids frienly events"/>
    </com.google.android.material.card.MaterialCardView>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/kids_screen_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/material_space"
                    android:textSize="22dp"
                    android:text="We hosted kids friendly events in the past and hope to do so in the future. If the event is child friendly, this will be always stated in the event description!"/>
            <TextView
                    android:id="@+id/link_meetup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/WtmBerlin.SocialMedia.Item"
                    android:autoLink="web"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"
                    android:drawableEnd="@drawable/social_media_icon_facebook"
                    android:text="https://www.facebook.com/WomenTechmakersBerlinPage/videos/563501104173571/?t=91"/>

            <TextView
                    android:id="@+id/kids_screen_toy"
                    android:background="@drawable/ic_rotate"
                    android:backgroundTint="@color/wtmGreenDark"
                    android:contentDescription="zz zz zz ziuuum zz zz ziuum zzzzzzz meow ziuuuuuuuum zz zz zz zz ziuuum meow meow zz zz ziuum zzzzzzz ziuuuuuuuum zz zz zz zz ziuuumzz zzziuum zzzzzzz ziuuuuuuuum zz meow meow meow"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>

            <TextView
                    android:id="@+id/kids_screen_toy_info"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/material_space"
                    android:importantForAccessibility="yes"
                    android:textSize="22dp"
                    android:text="The icon above is a simple toy for children with or without visual impairments"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>